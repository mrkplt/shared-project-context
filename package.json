{
  "name": "shared-project-context",
  "version": "0.2-pre",
  "description": "MCP Server for managing AI agent context with validation and correction guidance",
  "main": "dist/index.js",
  "bin": {
    "shared-project-context": "dist/server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "install-server": "npm run build && npm install -g . && chmod +x \"$(npm root -g)/shared-project-context/dist/server.js\""
  },
  "keywords": [
    "mcp",
    "context",
    "ai",
    "agent",
    "validation",
    "reasoning"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/inspector": "^0.13.0",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@types/events": "^3.0.0",
    "ajv": "^8.12.0",
    "fast-deep-equal": "^3.1.3",
    "fs-extra": "^11.2.0",
    "luxon": "^3.4.4",
    "mdast-util-from-markdown": "^2.0.2",
    "mdast-util-to-markdown": "^2.1.2",
    "remark-frontmatter": "^5.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.5",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/events": "^3.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.6.2",
    "@types/node": "^20.11.30",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "preferGlobal": true
}
